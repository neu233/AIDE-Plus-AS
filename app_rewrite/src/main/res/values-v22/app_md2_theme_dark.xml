<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- ActionBar TabView -->
	<style name="App.Widget.Material3.ActionBar.TabView" parent="@android:style/Widget.Material.ActionBar.TabView">
        <item name="android:background">@drawable/tab_mtrl</item>
    </style>

	<!-- ActionBar TabText -->
	<style name="App.Widget.Material3.ActionBar.TabText" parent="@android:style/Widget.Material.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
    </style>
	
	<!-- Dialog主题 -->
	<style name="DialogThemeDark" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorPrimary">@color/primary_material</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material</item>
        <item name="android:colorAccent">@color/accent_material</item>
		<!-- newUI -->
		<item name="android:colorEdgeEffect">?android:colorAccent</item>
		<item name="android:colorBackground">#ff303030</item>
        <item name="android:backgroundDimAmount">@dimen/dialog_bg_dim_amount</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowAnimationStyle">@style/Animation.Material.Dialog</item>
        
    </style>
	
	<!-- AlertDialogTheme -->
    <style name="AlertDialogThemeDark" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorPrimary">@color/primary_material</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material</item>
        <item name="android:colorAccent">@color/accent_material</item>
		
		<!-- newUI -->
		<item name="android:colorEdgeEffect">?android:colorAccent</item>
		<item name="android:colorBackground">#ff303030</item>
        <item name="android:backgroundDimAmount">@dimen/dialog_bg_dim_amount</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowAnimationStyle">@style/Animation.Material.Dialog</item>
        
			
    </style>
	
	<!-- AIDE原始风格 -->
	<style name="ActivityActionbarThemeDark" parent="@android:style/Theme.Material">
		
		
		<!-- newUI -->
		<item name="android:actionOverflowMenuStyle">@style/Widget.Material.PopupMenu.Overflow</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>
		<item name="android:navigationBarColor">@color/primary_material</item>
		<item name="android:popupMenuStyle">@style/Widget.Material.PopupMenu</item>


		<!-- 有冲突 
        <item name="android:dialogTheme">@style/DialogThemeDark1</item>
        <item name="android:alertDialogTheme">@style/AlertDialogThemeDark1</item>
		  -->
        
			
		<!-- 安卓框架 -->
			
		<!-- 窗口背景 -->
        <item name="android:windowBackground">@color/app_background</item>
		<!-- 窗口透明 -->
		<!-- newUI变为 false -->
        <item name="android:windowIsTranslucent">false</item>
		<!-- 软件输入模式 -->
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
		<!-- ActionBar Tab主题 -->
        <item name="android:actionBarTabStyle">@style/App.Widget.Material3.ActionBar.TabView</item>
		<!-- ActionBar Tab内Text禁用全部大写 -->
		<item name="android:actionBarTabTextStyle">@style/App.Widget.Material3.Light.ActionBar.TabText</item>

		<!-- dialogTheme主题 -->
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
		<!-- alertDialogTheme主题 -->
        <item name="android:alertDialogTheme">@style/AlertDialogThemeDark</item>

		<!-- Material变量 -->
        <item name="android:colorPrimary">@color/primary_material</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material</item>
        <item name="android:colorAccent">@color/accent_material</item>
		
		
		<!-- AIDE自定义变量 -->
        <item name="color_app_background">@color/app_background</item>
        <item name="color_browser_label">@color/browser_label</item>
        <item name="color_browser_label_gray">@color/browser_label_gray</item>
        <item name="color_key">@color/quickkey</item>
        <item name="color_list_separator">@color/list_separator</item>
        <item name="color_selected_item">@color/selected_list_item</item>
		
		
		<!-- @color/split_separator -> ?android:colorAccent -->
        <item name="color_split_separator">?android:colorAccent</item>
		
        <item name="drawable_header">@drawable/browser_header_material</item>
        <item name="drawable_keybar">@drawable/quickkeybar</item>
        <item name="drawable_popup">@drawable/popup</item>
		
		

        <item name="icon_add">@drawable/ic_l_add_dark</item>
        <item name="icon_close_keys">@drawable/ic_menu_close_clear_cancel</item>
        <item name="icon_copy">@drawable/ic_l_copy_dark</item>
        <item name="icon_cut">@drawable/ic_l_cut_dark</item>
        <item name="icon_delete">@drawable/ic_l_delete_dark</item>
        <item name="icon_design">@drawable/ic_l_design_dark</item>
        <item name="icon_edit">@drawable/ic_l_edit_dark</item>
        <item name="icon_expand">@drawable/ic_l_expand_dark</item>
        <item name="icon_fix">@drawable/ic_l_fix_dark</item>
        <item name="icon_goto">@drawable/ic_l_goto_dark</item>
        <item name="icon_help">@drawable/ic_l_help_dark</item>
        <item name="icon_manage">@drawable/ic_l_manage_dark</item>
        <item name="icon_more">@drawable/ic_l_more_dark</item>
        <item name="icon_open_keys">@drawable/ic_menu_moreoverflow_left</item>
        <item name="icon_paste">@drawable/ic_l_paste_dark</item>
        <item name="icon_redo">@drawable/ic_l_redo_dark</item>
        <item name="icon_run">@drawable/ic_l_play_dark</item>
        <item name="icon_stepover">@drawable/ic_l_stepover</item>
        <item name="icon_undo">@drawable/ic_l_undo_dark</item>
        <item name="icon_view">@drawable/ic_l_view_dark</item>
        <item name="theme_name">Material</item>
		
    </style>
	
	<style name="ActivityPreferencesThemeDark" parent="@android:style/Theme.Material">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:alertDialogTheme">@style/AlertDialogThemeDark</item>
        <item name="android:colorPrimary">@color/primary_material</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material</item>
        <item name="android:colorAccent">@color/accent_material</item>
		<!-- ActionBar Tab内Text禁用全部大写 -->
		<item name="android:actionBarTabTextStyle">@style/App.Widget.Material3.Light.ActionBar.TabText</item>
		
		<item name="theme_name">Material</item>
    </style>
	
	


	<!-- popmenu -->
	<style name="Widget.Material.PopupMenu" parent="@android:style/Widget.Material.Light.PopupMenu">
        <item name="android:colorBackground">#ff303030</item>
        <item name="android:popupBackground">@drawable/popup_bg</item>
    </style>
    <style name="Widget.Material.PopupMenu.Overflow" parent="@android:style/Widget.Material.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_overflow_bg</item>
        <item name="android:overlapAnchor">true</item>
    </style>


	<!-- 对话框 -->
	<style name="Animation.Material.Dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@animator/push_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/push_bottom_out</item>
    </style>


</resources>
